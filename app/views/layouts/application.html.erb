<!DOCTYPE html>
<html>
  <head>
    <title>Clother</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if current_user && current_user.admin %>
    <ul>
      <li><%= link_to "Add a Photo", new_photo_path %></li>
      <li><%= link_to "See all Photos", photos_path %></li>
      <li><%= link_to "Add Tags", new_tag_path %></li>
      <li><%= link_to "See all Tags", tags_path %></li>
      <li><%= link_to "See all Users", users_path %></li>
      <li><%= link_to "Users Awaiting Approval", "/unapproved_users" %></li>
      <li><%= link_to "Add a Coupon", new_coupon_path %></li>
      <li><%= link_to "See all Coupons", coupons_path %></li>

    </ul>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% end %>

    <%= yield %>

  </body>
</html>
